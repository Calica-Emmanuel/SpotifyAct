<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify-like Music Uploads</title>
    <style>
        /* Spotify-like styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: white;
            margin: 0;
            padding: 0;
        }

        nav {
            background-color: #1DB954;
            padding: 15px;
            display: flex;
            justify-content: space-between; /* Aligns items to both sides */
            align-items: center;
        }

        nav h1 {
            margin: 0; /* Removes margin for title */
            font-size: 1.5rem; /* Adjusts font size for title */
            color: white; /* Color for title */
        }

        nav a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            padding: 10px;
        }

        nav a:hover {
            background-color: #1ED760;
            border-radius: 5px;
        }

        h1, h2 {
            text-align: center;
            color: white;
        }

        h2 {
            margin-top: 40px;
            font-size: 1.8rem;
        }

        /* Main container with flex layout */
        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 40px;
            padding: 20px;
            background-color: #282828;
            border-radius: 15px;
        }

        /* Personal Hits section */
        .personal-hits {
            flex: 1;
            text-align: left;
            color: #1DB954;
            font-size: 1.5rem;
            font-weight: bold;
            padding: 20px;
        }

        /* Album Cover section */
        .album-cover {
            flex: 1;
            text-align: center;
        }

        .album-cover img {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* Upload form section */
        .upload-form {
            flex: 1;
            text-align: right;
            padding: 20px;
        }

        .upload-form input[type="file"], .upload-form input[type="text"], .upload-form button {
            margin-top: 10px;
            padding: 10px;
            font-size: 1rem;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
        }

        .upload-form button {
            background-color: #1DB954;
            cursor: pointer;
        }

        .upload-form button:hover {
            background-color: #1ED760;
        }

        /* Uploaded songs section */
        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        li {
            margin: 20px 0;
            background-color: #333;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        li img {
            margin-right: 20px;
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 5px;
        }

        .song-details {
            flex: 1;
            display: flex;
            align-items: center;
        }

        audio {
            display: block;
            margin: 20px auto;
            width: 100%;
            max-width: 200px;
        }

        button {
            background-color: #1DB954;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            border-radius: 5px;
            margin-left: 10px;
        }

        button:hover {
            background-color: #1ED760;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav>
        <h1>SpotMusc</h1> <!-- Title on the left -->
        <div>
            <a href="/">Home</a>
            <a href="/about">About</a>
        </div>
    </nav>

    <!-- Main Container with Personal Hits, Album Cover, and Upload Form -->
    <div class="container">

        <!-- Album Cover (Center) -->
        <div class="album-cover">
            <% if (songs.length > 0 && songs[0].album_cover) { %>
                <img src="<%= songs[0].album_cover %>" alt="Album Cover">
            <% } else { %>
                <img src="https://via.placeholder.com/300?text=My+Personal+Hits" alt="My Personal Hits">
            <% } %>
        </div>

        <!-- Upload Form (Right Side) -->
        <div class="upload-form">
            <h1>Upload Your Music</h1>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <label for="uploaderName">Music Name:</label>
                <input type="text" name="uploaderName" id="uploaderName" required>
                <br><br>
                <label for="mp3file">Upload MP3 File:</label>
                <input type="file" name="mp3file" id="mp3file" accept="audio/mp3" required>
                <br><br>
                <label for="albumCover">Upload Album Cover (Optional):</label>
                <input type="file" name="albumCover" id="albumCover" accept="image/*">
                <br><br>
                <button type="submit">Upload</button>
            </form>
        </div>
    </div>

    <!-- Uploaded Songs Section -->\
    <h2>My Personal Hits</h2>
    <ul>
        <% songs.forEach(song => { %>
            <li>
                <div class="song-details">
                    <% if (song.album_cover) { %>
                        <img src="<%= song.album_cover %>" alt="Album Cover">
                    <% } else { %>
                        <img src="https://via.placeholder.com/60?text=No+Cover" alt="No Album Cover">
                    <% } %>
                    <p><strong><%= song.uploader_name || 'Unknown Artist' %></strong></p>
                </div>
        
                <audio controls>
                    <source src="<%= song.filepath %>" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
        
                <form action="/delete" method="POST">
                    <input type="hidden" name="song_id" value="<%= song.id %>">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
        </ul>
        

</body>
</html>
